---
import { Image } from "astro:assets";
import iconClock from "../assets/icon-clock.svg";
import iconView from "../assets/icon-view.svg";
import avatar from "../assets/image-avatar.png";
import equilibrium from "../assets/image-equilibrium.jpg";
---

<div class="bg-card-bg card flex flex-col gap-6 rounded-2xl p-6">
  <div
    class="after:bg-cyan group relative w-full cursor-pointer after:invisible after:absolute after:inset-0 after:h-full after:w-full after:rounded-lg after:bg-opacity-50 after:content-[''] hover:after:visible"
  >
    <Image
      src={equilibrium}
      alt={"Image of a cube, perfectly stable on a corner."}
      class="rounded-lg object-cover"
    />

    <Image
      src={iconView}
      alt=""
      class="invisible absolute inset-1/2 size-12 -translate-x-1/2 -translate-y-1/2 group-hover:visible"
    />
  </div>

  <div class="flex flex-col gap-4">
    <div class="flex flex-col gap-3 sm:gap-4">
      <h1 class="text-heading hover:text-cyan cursor-pointer font-semibold">
        Equilibrium #3429
      </h1>
      <p class="text-soft-blue text-lg font-light leading-[1.625rem]">
        Our Equilibrium collection promotes balance and calm.
      </p>
    </div>

    <div class="flex w-full flex-row justify-between">
      <div
        class="text-cyan text-15px flex flex-row items-center gap-[0.4rem] font-semibold sm:text-base"
      >
        <img src="/icon-ethereum.svg" alt="Ethereum logo" />
        <span>0.041 ETH</span>
      </div>

      <div
        class="text-15px text-soft-blue flex flex-row items-center gap-2 sm:text-base"
      >
        <Image src={iconClock} alt="" />
        <span>3 days left</span>
      </div>
    </div>

    <hr class="border-line border-[0.0625rem]" />

    <div class="flex flex-row items-center gap-4">
      <Image
        src={avatar}
        alt="Avatar of the creator of the NFT, Jules Wyvern."
        class="size-[2.0625rem] rounded-full border-[1px] border-white"
      />

      <span class="text-15px text-soft-blue sm:text-base">
        Creation of
        <span class="hover:text-cyan cursor-pointer text-white"
          >Jules Wyvern</span
        >
      </span>
    </div>
  </div>
</div>

<style>
  .card {
    box-shadow: 0px 25px 50px 0px rgba(0, 0, 0, 0.1);
    @apply h-fit w-full max-w-[21.875rem] shrink-0;
  }

  .text-heading {
    font-size: 1.375rem;
  }

  .text-15px {
    font-size: 0.9375rem;
  }
</style>
